---
import Section from "./Section.astro";

import { education } from '@cv'

---

<Section title="Education">
    <ul>
        {
            education.map(({institution, startDate, endDate, url, courses, area, studyType}) => {
                // const startYear = new Date(startDate).getFullYear()
                // const endYear = endDate != null ? new Date(endDate).getFullYear() : "Actual"
                // const years = `${startYear} - ${endYear}`
                return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h3>{institution}</h3>
                                    <h4>{area}</h4>
                                </div>
                                <time>
                                    {startDate} &bull; {endDate}
                                </time>
                            </header>

                            <footer>
                                <p>{courses}</p>
                            </footer>
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
     display: flex;
     flex-direction: column;
     gap: 32px;
    }
 
    article h3{
     font-weight: 500;
     color: #111;
    }
 
    article h4{
     color: #222;
     font-weight: 400;
    }
 
    header {
     display: flex;
     justify-content: space-between;
     align-items: flex-start;
     margin-bottom: 4px;
    }
 
    time {
     color: #555;
     font-size: 0.6rem;
    }
 </style>